@if (Aligment == Aligment.Left)
{
    @foreach (var tag in Tags)
    {        
        <a id="tag" href="/" @onclick="@(() => OnTagClicked.InvokeAsync(tag.Name))">@((MarkupString)$"{tag.Name} ")</a>
        
    }
}

@if (Aligment == Aligment.Top)
{
<div class="tagContainer">
    @foreach (var tag in Tags)
    {        
        <a id="tag" href="/" @onclick="@(() => OnTagClicked.InvokeAsync(tag.Name))">@((MarkupString)$"{tag.Name} ")</a>
    }
</div>
}

@code{
    [Parameter]
    public IEnumerable<Tag> Tags { get; set; }

    [Parameter]
    public Aligment Aligment { get; set; }

    [Parameter]
    public EventCallback<string> OnTagClicked { get; set; }

    private void InvokeEvent(string tagName)
    {
        OnTagClicked.InvokeAsync(tagName);
    }
}