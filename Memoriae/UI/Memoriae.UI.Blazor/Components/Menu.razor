    private string adminMenuItemClassName = "menuItem";

    protected override void OnInitialized()
    {
        // SaveState(1);
    }    

    private async Task DoLogout()
    {
        await AuthentificationService.Logout();
    }

    private void SaveState(int order)
    {
        if (order == 1)
        {
            mainMenuItemClassName = $"{mainMenuItemClassName} menuItemWithUnderline";
            adminMenuItemClassName = menuItem;
        }
        if (order == 2)
        {
            adminMenuItemClassName = $"{adminMenuItemClassName} menuItemWithUnderline";
            mainMenuItemClassName = menuItem;
        }
    }

