<div>
    <p class="dateTimeOnMain">
        @Post.CreateDateTime.ToString("ddd, dd MMMM yyyy HH:mm")
    </p>
    <p class="inputTitle previewInputTile" style="margin-bottom: 0px">@((MarkupString)Post.Title)</p>    
    <p style="text-align: justify; font-size: 14px; font-style: normal; font-weight: 400; line-height: 20px; color: #000000;">
        @((MarkupString)Post.PreviewText)
    </p>    
    <TagLine IsReadOnly=true Aligment="@Aligment.Left" Tags="@Post.Tags" ></TagLine>
    <hr id="noMarginHr" />
</div>

    @code {
        [Parameter]
        public PostRead Post { get; set; }
    }
